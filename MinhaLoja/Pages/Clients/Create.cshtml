@page
@model GestaoClientes.Pages.Clients.CreateModel
@{
}


<br />
<h2>Novo Cliente</h2>

<!--Verificamos se tem alguma mensagem de erro-->
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert alert-warning alert-dismissible fade show' role="alert">
        <strong>
            @Model.errorMessage
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="POST">
    <div class="roww mb-3">
        <!--Tem 3 de largura-->
        <label class="col-sm-3 col-form-label">Nome</label>
         <!--Tem 6 de largura (o dobro da anterior)-->
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.clientInfo.name"/>
        </div>

    </div>

    <div class="roww mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.clientInfo.email"/>
        </div>

    </div>

    <div class="roww mb-3">
        <label class="col-sm-3 col-form-label">Telefone</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.clientInfo.phone"/>
        </div>

    </div>

    <div class="roww mb-3">
        <label class="col-sm-3 col-form-label">~Morada</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="address" value="@Model.clientInfo.address"/>
        </div>

    </div>

    <!--Se a mensagem de sucesso não estiver vazia, então:-->
    @if (Model.successMessage.Length > 0)
{
    <div class="row mb-3">
        <div class="col-sm-9">
            <div class='alert alert alert-warning alert-dismissible fade show' role="alert">
                <strong>
                    @Model.successMessage
                </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>    
    </div>
}

    <div class="roww mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submeter</button>
        </div>
        <div class="col-sm-3 d-grid">
            <!--botão cancelar que nos leva para a main page (href="/")-->
            <a class="btn btn-outline-primary" href="/" role="button">Cancelar</a>

        </div>

    </div>
</form>